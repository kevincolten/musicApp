<h1>Artists</h1>
<a href="<%= new_artist_url %>">add artist</a>

<ul>
    <% @artists.each do |artist| %>
        <li><%= artist.name %></li>
            <ul>
                <% artist.albums.each do |album| %>
                    <li> <%= album.name %> </li>
                    <ul>
                        <% album.tracks.each do |track| %>
                            <li>
                                <%= track.name %>
                                <% if track.live %>
                                    <%= " (Live)" %>
                                <% end %>
                            </li>
                        <% end %>
                    </ul>
                <% end %>
            </ul>
    <% end %>
</ul>
